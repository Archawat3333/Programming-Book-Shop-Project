            <div class="wrapper_f">
                <form action="/forgotPassword" method="post" class="form-regis">
                    <h3 class="form-signin-heading login"><b>Reset Password</b></h3>
            
                    <div class="mt-3 bu2">Email</div>
                    <input name="email" type="email" class="form-control" placeholder="name@example.com"/>

                    <% if (num == '1')  { %> 

                        <div class="alert alert-danger ale" role="alert">
                          <strong>Error : </strong> <%= text + '.' %>
                          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                          </button> 
                        </div>
              
                        <% } else if (num == '2') { %>
                          <div class="alert alert-danger ale" role="alert">
                            <strong>Error : </strong> <%= text + '.' %>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                            </button>
                          </div>

                          <% } else { %>
                                <div></div>
        
                            <% } %>

                    <div class="mt-4">
                        <span style="float: left">
                            <a class="btn btn mt-3 bu" href="/">Back</a>
                        </span>
                        <span style="float: right">
                            <button type="submit" class="btn btn mt-3 bu">
                            Reset
                            </button>
                        </span>
                    </div>
                </form>
            </div>


</body>
