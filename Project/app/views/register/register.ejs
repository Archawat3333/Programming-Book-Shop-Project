<div class="wrapper_r">
    <form action="/register" method="post" class="form-regis">
        <h3 class="form-signin-heading login"><b>Register</b></h3>

        <div class="mt-3 bu2">Email</div>
        <input name="email" type="email" class="form-control" placeholder="name@example.com"/>

        <div class="mt-3 bu2">Name</div>
        <div><input name="name"  type="text" class="form-control" placeholder="name"/></div>

        <div class="mt-3 bu2"><label for="pwd">Password <span class="ok">(At least 8 length)</span></label></div>
        
          <div class="password-container">
          <input name="pwd" id="pwd" type="password" class="form-control" placeholder="xxxxxxxx"/>
          <i class="fa-solid fa-eye-slash" id="show-password"></i>

        </div>

        <div class="mt-3 bu2"><label for="pwd2">Confirm Password</label></div>

        <div class="password-container">
          <input name="pwd2" id="pwd2" type="password" class="form-control" placeholder="xxxxxxxx"/>
          <i class="fa-solid fa-eye-slash" id="show-password2"></i>

        </div>
        <p id="message"></p>        

    

          <% if (num == '1')  { %> 

