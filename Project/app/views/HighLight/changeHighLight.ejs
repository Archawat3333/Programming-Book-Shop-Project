<%- include('../header') %>
<div class="container sod">

    <form method="post">
        <div class="card mt-3">
            <div class="card-body">
                <div class="card-title ch2"> <h4>แก้ไขข้อมูลไฮไลค์เว็บ</h4> </div>
                
                <table border="0">
                    <tr>
                        <td>
                            <% if (product.p1 != undefined) { %>
                                <label class="ch">ไฮไลค์ 1</label>
                                <div class="mb-2 mt-1">
                                    <img src="../images/<%= product.p1 %>" width="200px" />
                                    <input type="file" value="product.p1" name="p1" class="form-control"/>
                                </div>
                        </td>
                        <td>
                            <label class="ch">ไฮไลค์ 2</label>
                            <div class="mb-2 mt-1">
                                <img src="../images/<%= product.p2 %>" width="200px" />
                                <input type="file" value="product.p2" name="p2" class="form-control"/>
                            </div>
                        </td>
                        <td>
                            <label class="ch">ไฮไลค์ 3</label>
                            <div class="mb-2 mt-1">
                                <img src="../images/<%= product.p3 %>" width="200px" />
                                <input type="file" value="product.p3" name="p3" class="form-control"/>
                        </div>
                        <% } else { %>
                            <div class="mb-2 mt-1">
                                <input type="file" name="p1" class="form-control" />
                            </div>
                        <% } %>
                        </td>
                    </tr>
                    
                </table>

                <div class="mt-3 float-right">
                    <button type="submit" class="btn btn-primary">
                       <h5>แก้ไข</h5> 
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>


<%- include('../footer') %>