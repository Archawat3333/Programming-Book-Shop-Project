    <div class="container mt-3">
        <div class="card">
            <div class="card-body">
                <div class="input-group">
                    <h2 class="bu">รายละเอียดคำสั่งซื้อสินค้า</h2>
                    
                </div>
                
                <% if (orders.length > 0) { %>
                    <% orders.forEach(item => { %>
                <div class="alert mt-2 tract">

                  <table border="0" width="100%">
                    <tr >
                      <th >สินค้ารายการที่ </th>
                      <td><b> : </b><%= item.id %></td>
                    </tr>
                    <tr>
                      <th >ลูกค้า</th>
                      <td><b> : </b><%=item.name %></td>
                    </tr>
                    <tr>
                      <th >ที่อยู่จัดส่ง</th>
                      <td><b> : </b><%= item.homeid + ' หมู่ ' + item.muid + ' ตำบล' + item.tambon + ' อำเภอ' + item.district + ' จังหวัด' + item.province + ' รหัสไปรษณีย์ ' +item.zip %></td>
                    </tr>

                    
                    <tr>
                      <th >อีเมลล์ที่สั่งซื้อ</th>
                      <td><b> : </b><%=item.email %></td>
                    </tr>
                    <tr>
                      <th >รหัสติดตามพัสดุ</th>
                      <td><b> : </b><%=item.track_code %></td>
                    </tr>
                    <tr>
                      <th >ขนส่ง</th>
                      <td><b> : </b><%=item.track_name %></td>
                    </tr>
                    <tr>
                      <th >วันชำระเงิน</th>
                      <td><b> : </b><%= dayjs(item.pay_date).format(dayFormat) %></td>
                    </tr>
                    <tr>
                      <% if (item.status == 0) { %>
                        <th class="dang">หมายเหตุการชำระเงิน</th>
                        <td class="dang"><b> : <%= item.pay_remark %> </b></td>
                      <% } else { %>
                        <th class="dang2">หมายเหตุการชำระเงิน</th>
                        <td class="dang2"><b> : <%= item.pay_remark %> </b></td>
                      <% } %>
                    </tr>
                    <tr>
                      <th >วันที่จัดส่ง</th>
                      <td><b> : </b><%= dayjs(item.send_date).format(dayFormat) %></td>
                    </tr>
                    <tr>
         
                      <% if (item.status == 0) { %>
                        <th class="dang">หมายเหตุการจัดส่งสินค้า</th>
                        <td class="dang"><b> : <%= item.send_remark %> </b></td>
                      <% } else { %>
                        <th class="dang2">หมายเหตุการจัดส่งสินค้า</th>
                        <td class="dang2"><b> : <%= item.send_remark %> </b></td>
                      <% } %>
                    </tr>
                    <tr>
                      <th class="dang2">ใบกำกับสินค้า</th>
                        <td class="">



                          
                              <b> <a class="" href="/receipt/<%= item.id %>"><u>คลิกที่นี่</u> </a> </b> เพื่อดูใบกำกับสินค้า



                          



                        </td>
                    </tr>

                    <tr>
                      <th ></th>
                      <td class="float-right">
                        <% if (item.status == 0) { %>
                          <a class="btn btn-danger mt-2 ml-6" href="deleteOrderMember/<%= item.id %>" onclick="return confirm('Are you sure ?')">
                              ยกเลิกคำสั่งซื้อ
                          </a>
                          <% } else { %>
                            <a class="btn btn-info mt-2 ml-6 disabled" href="deleteOrderMember/<%= item.id %>" onclick="return confirm('Are you sure ?')">
                              ไม่สามารถยกเลิกคำสั่งซื้อได้
                          </a>
                          <% } %>
                      </td>
                    </tr>

                  </table>                
                  <hr color="black" width="100%">

                </div>
                    <% }) %>
                <% } %>
                
            </div>
            
        </div>
        
      </div >
