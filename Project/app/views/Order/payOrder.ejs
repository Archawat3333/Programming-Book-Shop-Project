<%- include('../header') %>
<div class="container">
    <div class="card mt-5">
        <div class="card-body">
            <div class="card-title h5">บันทึกการรับชำระเงิน บิล : <%= orderId %></div>
            <form method="post" class="mt-3">
                <div>
                    <label>วันที่ชำระเงิน</label>
                    <input type="date" class="form-control" name="pay_date" />
                </div>
                <div class="mt-3">
                    <label>หมายเหตุเพิ่มเติม</label>
                    <input type="text" class="form-control" name="pay_remark" />
                </div>
                <div class="mt-3">
                    <button class="btn btn-info" type="submit">
                        ชำระเงินเรียบร้อย
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


<%- include('../footer') %>